/**app.wxss**/
page {
  height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  background: #ffffff;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-top: 40rpx;
} 

/* 去除默认的页面滚动 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
} 
