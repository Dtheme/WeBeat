/* 音色选择器 */
.sound-picker {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  visibility: hidden;
  transform: translateY(100%);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.sound-picker.visible {
  visibility: visible;
  transform: translateY(0);
}

/* 遮罩层 */
.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.sound-picker.visible .mask {
  opacity: 1;
}

/* 主容器 */
.container {
  position: relative;
  width: 100%;
  height: 70vh;
  background: #ffffff;
  border-radius: 12px 12px 0 0;
  overflow: hidden;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
}

.sound-picker.visible .container {
  transform: translateY(0);
}

/* 顶部栏 */
.header {
  position: relative;
  padding: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  z-index: 10;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 17px;
  font-weight: 500;
  color: #000;
}

.close-btn {
  position: absolute;
  right: 16px;
  top: 50%;
  transform: translateY(-50%);
  padding: 8px;
  margin: -8px;
}

.close-btn .icon {
  font-size: 20px;
  color: #999;
}

/* 分类导航 */
.category-nav-wrapper {
  position: relative;
  background: #fff;
  padding: 0;
  z-index: 9;
  flex-shrink: 0;
}

.category-nav-wrapper::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background: rgba(0, 0, 0, 0.05);
  transform: scaleY(0.5);
}

.category-nav {
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
}

.category-nav-content {
  display: inline-flex;
  padding: 12px 16px;
  align-items: center;
}

.category-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 64px;
  height: 64px;
  margin-right: 8px;
  border-radius: 12px;
  background: #f8f9fa;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-item:last-child {
  margin-right: 0;
}

.category-item:active {
  transform: scale(0.95);
  background: #f0f0f0;
}

.category-item.active {
  background: rgba(0, 122, 255, 0.08);
}

.category-icon {
  font-size: 24px;
  margin-bottom: 4px;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-item.active .category-icon {
  transform: scale(1.1);
}

.category-name {
  font-size: 12px;
  color: #666;
  transition: all 0.3s ease;
}

.category-item.active .category-name {
  color: #007AFF;
  font-weight: 500;
}

.active-indicator {
  position: absolute;
  bottom: -8px;
  left: 50%;
  width: 4px;
  height: 4px;
  background: #007AFF;
  border-radius: 50%;
  opacity: 0;
  transform: translateX(-50%) scale(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-item.active .active-indicator {
  opacity: 1;
  transform: translateX(-50%) scale(1);
}

/* 添加渐变遮罩 */
.category-nav-wrapper::before,
.category-nav-wrapper::after {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  width: 24px;
  z-index: 1;
  pointer-events: none;
}

.category-nav-wrapper::before {
  left: 0;
  background: linear-gradient(to right, #fff 30%, rgba(255, 255, 255, 0));
}

.category-nav-wrapper::after {
  right: 0;
  background: linear-gradient(to left, #fff 30%, rgba(255, 255, 255, 0));
}

/* 音色列表区域 */
.sound-list {
  flex: 1;
  width: 100%;
  background: #fff;
  overflow: hidden;
}

.sound-list-content {
  padding: 0;
}

/* 音色卡片 */
.sound-card {
  position: relative;
  display: flex;
  align-items: center;
  padding: 16px;
  background: #fff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  transition: background-color 0.2s ease;
}

.sound-card:active {
  background-color: #f5f5f5;
}

.sound-card.active {
  background: rgba(0, 122, 255, 0.05);
}

/* 音色图标 */
.sound-icon {
  width: 24px;
  height: 24px;
  margin-right: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 波形动画 */
.wave-animation {
  width: 16px;
  height: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.wave {
  width: 2px;
  height: 10px;
  background: #007AFF;
  border-radius: 1px;
  transform: scaleY(0.3);
}

.wave-animation.playing .wave {
  animation: wave 0.8s ease infinite;
}

.wave-animation .wave:nth-child(2) {
  animation-delay: 0.2s;
}

.wave-animation .wave:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes wave {
  0%, 100% {
    transform: scaleY(0.3);
  }
  50% {
    transform: scaleY(1);
  }
}

/* 音色信息 */
.sound-info {
  flex: 1;
  min-width: 0;
  margin-right: 12px;
}

.sound-name {
  font-size: 17px;
  color: #000;
  margin-bottom: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sound-desc {
  font-size: 14px;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 试听按钮 */
.test-btn {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.test-btn:active {
  background: #e5e5e5;
}

.test-btn.testing {
  background: #007AFF;
}

.test-icon {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 5px 0 5px 8px;
  border-color: transparent transparent transparent #007AFF;
  margin-left: 2px;
}

.test-btn.testing .test-icon {
  width: 8px;
  height: 8px;
  border: none;
  margin: 0;
  background: #fff;
  border-radius: 1px;
}

/* 选中标记 */
.selected-mark {
  position: absolute;
  right: 64px;
  top: 50%;
  transform: translateY(-50%);
  width: 20px;
  height: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.selected-mark .icon {
  color: #007AFF;
  font-size: 20px;
  font-weight: bold;
}

/* 滚动条样式优化 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  background: transparent;
} 